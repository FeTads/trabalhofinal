void fazTudo(int x, int y) {
	COORD p = {x,y};
	SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), p);
}

int dificuldade(int dif){
	
	system("cls");
	
	printf("Escolha a Dificuldade: \n");
	printf("1 - Facil\n");
	printf("2 - Medio\n");
	printf("3 - Dificil\n");
	printf("> ");
	scanf("%i", &dif);
	
	return dif;	
}

